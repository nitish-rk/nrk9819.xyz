{
  "$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "include": ["app/**/*.mjs"],
    "ignoreUnknown": true
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "all": true,
      "suspicious": {
        "noConsoleLog": "error",
        "useAwait": "off"
      },
      "nursery": {
        "all": false
      },
      "style": {
        "noDefaultExport": "off"
      }
    }
  },
  "formatter": {
    "enabled": false
  }
}
